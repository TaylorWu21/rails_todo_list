<h1>Your To Do List:</h1>
<p>Create a new to do task here</p>
<p><%= link_to 'New To Do', new_item_path, class:'btn btn-default' %></p>
<% @items.each do |item| %>
	<h2>To Do: <br/><%= item.name %></h2>
	<p>Description: <br/><%= item.description %></p>
	<p>Completed: <br/><%= item.complete %></p>
	<%= link_to 'Show', item_path(item), class:'btn btn-primary' %>
	<%= link_to 'Edit', edit_item_path(item), class:'btn btn-info' %>
	<%= link_to 'Delete', item_path(item) , method: :delete, class:'btn btn-danger' %>
<% end %>
